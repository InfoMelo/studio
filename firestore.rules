
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default: allow public read access, but restrict write access to authenticated users.
    // This is a good starting point for many apps.
    // You can be more granular with rules for specific collections.
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Example of more specific rules for the 'doctors' collection
    match /doctors/{doctorId} {
      // Anyone can read the doctor list
      allow read: if true;
      // Only authenticated users can create, update, or delete doctor data
      allow create, update, delete: if request.auth != null;
    }

    // Apply the same logic to other collections
    match /services/{serviceId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    match /facilities/{facilityId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    match /articles/{articleId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
    
    match /partners/{partnerId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
    
    match /vacancies/{vacancyId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
  }
}
