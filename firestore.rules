
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default: Deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Collections that are public and can be read by anyone
    match /doctors/{docId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }

    match /services/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /facilities/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /articles/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /partners/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /vacancies/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
