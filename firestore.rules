
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to all collections
    match /{document=**} {
      allow read: if true;
    }

    // Secure all collections against unauthorized writes
    match /doctors/{docId} {
      allow write: if request.auth != null;
    }
    match /services/{docId} {
      allow write: if request.auth != null;
    }
    match /facilities/{docId} {
      allow write: if request.auth != null;
    }
    match /articles/{docId} {
      allow write: if request.auth != null;
    }
    match /partners/{docId} {
      allow write: if request.auth != null;
    }
    match /vacancies/{docId} {
      allow write: if request.auth != null;
    }
  }
}
